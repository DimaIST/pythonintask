import random
print (''Отгадайте название одного из семи городов России, в котором пройдем ЧМ по футболу в 2018 году")
def get_random_gorod():
   gorods = ("Челябинск","Владивосток","Ростов-на-Дону","Новосибирск",
"Севастополь","Саратов","Воркута")
   return random.choice(gorods)
sobor = get_random_gorod()
user_gorod = input('Введите ваш вариант: ')
ball = 5
while gorod.lower() != user_gorod.lower() and ball >1:
    ball -= 2
    print('У вас остлось', ball, 'баллов', 'Попробуйте ещё раз')
    user_gorod = input('Введите ваш вариант: ')
if ball > 1:
   print("Да вы отгдали!"'У вас остлось', ball)
else:
    print('Баллы закончились, а вы не угадали собор ')
input ('Нажмите Enter для выхода')
